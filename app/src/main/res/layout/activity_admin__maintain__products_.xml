<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context="Admin.Admin_Maintain_Products_Activity"
    android:layout_marginLeft="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />
        <EditText
            android:id="@+id/maintain_product_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_image"
            android:gravity="center_horizontal"
            android:hint="Products Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_Name"
            android:gravity="center_horizontal"
            android:hint="Products Price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_price"
            android:gravity="center_horizontal"
            android:hint="Products Description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/apply_changes_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/maintain_product_description"
            android:layout_margin="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Apply Changes"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
        <Button
            android:id="@+id/delete_products_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/apply_changes_button"
            android:layout_margin="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Delete Product"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>